<h3 class="ui header">{{t "forms.i-i-s-primer-вид-обращения-e.caption"}}</h3>

<form class="ui form flexberry-vertical-form" role="form">
  {{flexberry-error error=error}}
  <div class="field">
    <div class="flexberry-edit-panel">
      {{#unless readonly}}
        <button class="ui button save-button" {{action "save"}}>
          {{t "forms.edit-form.save-button-text"}}
        </button>
        {{#unless model.isNew}}
          <button class="ui button save-del-button" {{action "delete"}}>
            {{t "forms.edit-form.delete-button-text"}}
          </button>
        {{/unless}}
      {{/unless}}
      <button class="ui button close-button" {{action "close"}}>
        {{t "forms.edit-form.close-button-text"}}
      </button>
    </div>
  </div>
  <div class="field flexberry-validationsummary-container">
    <div class="sixteen wide">
      {{flexberry-validationsummary errors=(v-get validationObject "messages")}}
    </div>
  </div>
  <div class="field">
    {{flexberry-field
      readonly=readonly
      value=model.название
      class=(if (v-get validationObject "название" "isInvalid") "error")
      label=(t "forms.i-i-s-primer-вид-обращения-e.название-caption")
      data-test-i-i-s-primer-вид-обращения-e-название=true
    }}
    {{flexberry-validationmessage error=(v-get validationObject "название" "message")}}
  </div>
  <div class="field">
    {{flexberry-field
      readonly=readonly
      value=model.код
      class=(if (v-get validationObject "код" "isInvalid") "error")
      label=(t "forms.i-i-s-primer-вид-обращения-e.код-caption")
      data-test-i-i-s-primer-вид-обращения-e-код=true
    }}
    {{flexberry-validationmessage error=(v-get validationObject "код" "message")}}
  </div>
  <div class="field">
    <label>{{t "forms.i-i-s-primer-вид-обращения-e.типОбращения-caption"}}</label>
    {{flexberry-lookup
      choose="showLookupDialog"
      remove="removeLookupValue"
      value=model.типОбращения
      class=(if (v-get validationObject "типОбращения" "isInvalid") "error")
      displayAttributeName="название"
      autocomplete=true
      relationName="типОбращения"
      projection="ТипОбращенияL"
      title=(t "forms.i-i-s-primer-вид-обращения-e.типОбращения-caption")
      readonly=readonly
      componentName="типОбращенияLookup"
      class=(if (v-get validationObject "типОбращения" "isInvalid") "error")
      data-test-i-i-s-primer-вид-обращения-e-типОбращения=true
    }}
    {{flexberry-validationmessage error=(v-get validationObject "типОбращения" "message")}}
  </div>

</form>